{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "uksouth",
      "metadata": {
        "description": "Location for all resources. This template deploys resources in UK South."
      }
    },
    "datalakeStorageAccountBaseName": {
      "type": "string",
      "defaultValue": "cb19996synapsedls",
      "metadata": {
        "description": "Base name for the Data Lake Storage account. A unique name will be generated using this base."
      }
    }
  },
  "variables": {
    "uniqueDlsNameProd": "[toLower(concat(substring(parameters('datalakeStorageAccountBaseName'), 0, 7), 'prod', uniqueString(resourceGroup().id)))]",
    "uniqueDlsNameTest": "[toLower(concat(substring(parameters('datalakeStorageAccountBaseName'), 0, 7), 'test', uniqueString(concat(resourceGroup().id, 'test'))))]",
    "uniqueDlsNameDev": "[toLower(concat(substring(parameters('datalakeStorageAccountBaseName'), 0, 7), 'dev', uniqueString(concat(resourceGroup().id, 'dev'))))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('uniqueDlsNameProd')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "isHnsEnabled": true,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      },
      "resources": [
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/bronze",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/silver",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/gold",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/logs",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/general",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('uniqueDlsNameTest')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "isHnsEnabled": true,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      },
      "resources": [
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/bronze",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/silver",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/gold",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/logs",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/general",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        }
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('uniqueDlsNameDev')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "isHnsEnabled": true,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true
      },
      "resources": [
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/bronze",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/silver",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/gold",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/logs",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        },
        {
          "type": "blobServices/containers",
          "apiVersion": "2021-09-01",
          "name": "default/general",
          "dependsOn": [
            "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
          ],
          "properties": {
            "publicAccess": "None"
          }
        }
      ]
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "deploymentScriptIdentity",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "createSalesDataFolders",
      "location": "[parameters('location')]",
      "kind": "AzureCLI",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', 'deploymentScriptIdentity')]": {}
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameProd'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameTest'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('uniqueDlsNameDev'))]"
      ],
      "properties": {
        "azCliVersion": "2.20.0",
        "timeout": "PT30M",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "P1D",
        "scriptContent": "[concat(\n          'touch empty.txt\\n',\n          'for account in ', variables('uniqueDlsNameProd'), ' ', variables('uniqueDlsNameTest'), ' ', variables('uniqueDlsNameDev'), '; do\\n',\n          '  key=$(az storage account keys list --resource-group ', resourceGroup().name, ' --account-name $account --query \"[0].value\" -o tsv)\\n',\n          '  for container in bronze silver gold logs general; do\\n',\n          '    echo \"Creating SALES_DATA folder in $account/$container\"\\n',\n          '    az storage blob upload --account-name $account --account-key $key --container-name $container --name SALES_DATA/.dummy --file empty.txt --overwrite --only-show-errors\\n',\n          '  done\\n',\n          'done\\n',\n          'rm empty.txt'\n        )]"
      }
    }
  ]
}
