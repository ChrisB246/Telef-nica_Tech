{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "uksouth"
    },
    "environmentNames": {
      "type": "array",
      "defaultValue": ["dev", "test", "prod"]
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[concat('synapselake', uniqueString(resourceGroup().id, parameters('location'), parameters('environmentNames')[copyIndex()]))]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2",
      "properties": {
        "isHnsEnabled": true
      },
      "copy": {
        "name": "storageAccountsCopy",
        "count": "[length(parameters('environmentNames'))]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2021-09-01",
      "name": "[concat('synapselake', uniqueString(resourceGroup().id, parameters('location'), parameters('environmentNames')[copyIndex('environmentLoop')] ), '/default/', array('bronze','silver','gold')[copyIndex('containerLoop')])]",
      "properties": {},
      "copy": [
        {
          "name": "environmentLoop",
          "count": "[length(parameters('environmentNames'))]"
        },
        {
          "name": "containerLoop",
          "count": 3
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', concat('synapselake', uniqueString(resourceGroup().id, parameters('location'), parameters('environmentNames')[copyIndex('environmentLoop')])))]"
      ]
    }
    // ... etc ...
  ]
}
